<h1>Listing files</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Media file name</th>
      <th>Media content type</th>
      <th>Media file size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><%= file.title %></td>
        <td><%= file.media_file_name %></td>
        <td><%= file.media_content_type %></td>
        <td><%= file.media_file_size %></td>
        <td><%= link_to 'Show', file %></td>
        <td><%= link_to 'Edit', edit_file_path(file) %></td>
        <td><%= link_to 'Destroy', file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

