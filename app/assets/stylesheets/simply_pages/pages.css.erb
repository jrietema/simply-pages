
h1 { font-size: 18px; }
h2 { font-size: 14px; }
h3 { font-size: 12px; }
h1, h2, h3 {
    line-height: 20px;
}

body [class^="icon-"],
body [class*=" icon-"] {
    background-image: url("<%= image_path('simply_pages/glyphicons-halflings.png') %>");
}


.control-group .control-label {
    font-size: 85%;
    font-weight: bold;
    letter-spacing: 0.05em;
    margin-bottom: 0;
}
.control-group .controls textarea {
    min-height: 400px;
}

/* Fancytree Dialogs */
body
.fancytree-container
.fancytree-node {
    position: relative;
    padding-right: 34px; }
body
.fancytree-container
.fancytree-node .node-actions a {
    position: relative;
    left: 0;
    top: -4px;
    opacity: 0.6; }
body
.fancytree-container
.fancytree-node .node-actions a:hover {
    opacity: 1; }

img.fullsize {
    position: absolute;
    left: -26px;
    top: 2px;
    width: auto !important;
    height: auto;
    max-height: 18px; }

.bootstrap-wysihtml5-insert-image-modal {
    padding: 0 16px; }
.bootstrap-wysihtml5-insert-image-modal label {
    margin-top: 0.33em; }
.bootstrap-wysihtml5-insert-image-modal label > input[type='radio'] {
    margin-right: 0.5em;
    margin-top: -3px; }
.bootstrap-wysihtml5-insert-image-modal .image_chooser {
    max-height: 240px;
    overflow-y: auto; }
.bootstrap-wysihtml5-insert-image-modal .image_chooser_preview {
    max-height: 240px;
    max-width: 480px;
    margin: 0 auto; }
.bootstrap-wysihtml5-insert-image-modal .image_orientation_select {
    max-width: 50%; }
body .navigation_header {
    padding-left: 14px;
    font-size: 14px;
    margin-bottom: 0;
}
body .navigation_header .btn-group {
    margin-left: 20px;
}
ul.list {
    margin: 0;
    list-style: none; }
ul.list .item {
    overflow: hidden;
    padding: 5px;
    border-radius: 3px;
    margin-bottom: 5px;
    border: 1px solid #dddddd; }
ul.list .item:hover {
    background-color: whitesmoke; }
ul.list .item .toggle {
    float: left;
    height: 16px;
    width: 16px;
    padding: 8px 0;
}
ul.list .item .toggle.open a,
ul.list .item.open .toggle a {
    background-image: url("<%= image_path('simply_pages/icons.gif') %>");
    background-position: -32px -80px; }
ul.list .item .toggle a {
    display: block;
    height: 16px;
    width: 16px;
    background: url("<%= image_path('simply_pages/icons.gif') %>") 0 -80px no-repeat; }
ul.list .item .toggle a span {
    display: none; }
ul.list .item .icon {
    float: left; }
ul.list .item .icon.draft {
    background: url("<%= image_path('simply_pages/icons.gif') %>"); }
ul.list .item .item-content {
    margin-left: 32px; }
ul.list .item.img .item-content {
    margin-left: 48px;
}
ul.list .item .item-content a.item-label {
    color: black; }
ul.list .item .btn-group {
    float: right;
    width: 100px;
}
ul.list .item.folder .btn-group {
  width: 290px;
}
ul.list .item .btn-group a:first-child {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
ul.list .btn-group form {
  margin: 0;
  display: inline;
}
ul.list .btn-group form .btn {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
ul.list li ul {
    list-style: none;
    margin: 0 0 0 28px; }
ul.list .icon {
    width: 16px;
    height: 16px;
    padding-left: 8px;
    background: url("<%= image_path('simply_pages/icons.gif') %>") 8px 0 no-repeat; }
ul.list .img .icon {
    width: 32px;
    height: 24px;
    margin-left: 8px;
    padding-left: 0;
    background: transparent none;
}
ul.list .icon .dragger {
    width: 16px;
    height: 16px;
    background: url("<%= image_path('simply_pages/icons.gif') %>");
    cursor: move;
    display: none;
}
ul.list .img .icon .dragger,
ul.list .folder .icon .dragger {
    background: none;
    display: block;
    height: 24px;
    width: 32px;
}
ul.list .folder .icon {
    background: url("<%= image_path('simply_pages/icons.gif') %>") 8px -16px no-repeat;
}
ul.list .icon .dragger span {
    display: none; }
ul.list .icon:hover .dragger {
    display: block; }
ul.list div.category {
    display: inline-block;
    vertical-align: top;
    font-size: 11px;
    line-height: 11px;
    border: 1px solid #dddddd;
    padding: 2px 5px;
    background-color: white;
    border-radius: 3px;
    border-left-width: 7px; }

.item-title {
    color: black; }
.item-title a {
    color: black; }

.item-meta {
    font-size: 11px;
    line-height: 14px; }

.control-group .controls input[type='text'],
.control-group .controls textarea {
    width: 96%;
}
.control-group.row .controls input {
    width: 286px;
}