$(function(){
    $('.sortable').sortable({
        handle: 'div.dragger',
        axis: 'y',
        containment: 'parent',
        cursor: 'move',
        update: function(){
            $.post("<%= SimplyPages::Engine.routes.url_helpers.reorder_pages_path %>", "_method=put&" + $(this).sortable('serialize'));
        }
    });
});